{
  "name": "larascript-core-bundle",
  "version": "1.0.0",
  "description": "A collection of core components for Larascript Framework",
  "license": "ISC",
  "author": "ben.shepherd@gmx.com",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "prepare": "lefthook install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "eslint --ignore-pattern .gitignore \"{src,tests}/**/*.+(ts|js|tsx)\"",
    "lint:fix": "eslint --fix --ignore-pattern .gitignore \"{src,tests}/**/*.+(ts|js|tsx)\"",
    "typecheck": "tsc --noEmit",
    "format": "prettier --ignore-path .prettierignore --write \"**/*.+(js|ts|json|tsx|mdx)\" --log-level silent"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/jest": "^29.5.0",
    "eslint": "^9.32.0",
    "globals": "^16.3.0",
    "jest": "^30.0.5",
    "jiti": "^2.5.1",
    "lefthook": "^1.12.2",
    "prettier": "3.6.2",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0",
    "validate-branch-name": "^1.3.2"
  },
  "validate-branch-name": {
    "pattern": "^(feat|fix|hotfix|release|test|experimental|refactor)/.+$",
    "errorMsg": "Branch name validation failed"
  }
}
